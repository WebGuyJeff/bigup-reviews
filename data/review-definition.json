			"value_step": ".0.1",
			"required": "true",
			"show_in_rest": "true",
			"single": "true",
			"user_capabilities": "edit_posts"
		},
		{
			"block_name": "bigup-reviews/review-avatar",
			"suffix": "_avatar",
			"label": "Avatar",
			"description": "Avatar (image) of the reviewer",
